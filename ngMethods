<style>
	input.ng-valid{
    	background-color:lightblue;
    }
</style>
<body>
	<!-- Own Directive Code is here -->
    <!-- w3-test-directive -->
    
    <!--USE THIS DIV TAG ALTERNATELY TO SEE RESULT -->
    <div ng-app="myapp" ng-controller="myctrl">
    	<p> <strong>--- Using controller function, click on below text to change with different name ---</strong> </p>
        <h1 ng-click="changeName()"> {{myname}} </h1>

        <p><strong> ---- Adding Filter(uppercase) options----</strong> </p>
        <input type="text" ng-model="myname1" />
        <h2> My Name in Capital : {{myname1 | uppercase}} </h2>

        <p><strong> ---- Filter an Array Based on User Input----</strong> </p>
        <input type="text" ng-model="searchStrings" placeholder="Enter text here" />
        <ul>
            <li ng-repeat="x in searchName | filter:searchStrings">
                {{ x.country + ', ' + x.famous }}
            </li>
        </ul> 
    </div>
    <script>
    	var app = angular.module('myapp', []).controller('myctrl', function($scope) {
    	    $scope.myname = "Priyansh Shah";
    	    $scope.myname1 = "sky is blue";
    	    $scope.searchName = [
            { country: 'portugal', famous: 'food' },
            { country: 'India', famous: 'hotfood' },
            { country: 'Switzerland', famous: 'sceneView' },
            { country: 'Germany', famous: 'MunichCapital' }];
            $scope.changeName = function(){
            	return $scope.myname = "Priyansh PRadip bhai Shah";
            };
            
        });
    </script>
    
    <!-----------------------------------From This area uncommented out, wanna to see Output change back to Commented------------------------------->
    <!--FORM TAG EXAMPLE -->
    <form ng-app="" name="myform">
    	<input type=text ng-model="myname" required></input>
    </form>
    
    <!--USE THIS DIV TAG ALTERNATELY TO SEE RESULT -->
    <div ng-app="myapp" ng-controller="myctrl" ng-init="values=10;quantity=20">
    	<p> First Name : <input type="textbox"ng-model="firstName"></p>
        <p> Last Name : <input type="textbox" ng-model="lastName"></p>
        <p> <input type="number" ng-model="values"> </input> </p>
        <p> <input type="number" ng-model="quantity"> </input> </p>
        <p> Values * Quantity = {{values * quantity}} </p>
        <h2>Controller here- My good name is : <span ng-bind="firstName +' '+lastName"> </span> </h2>
        
    </div>
    <script>
      var app = angular.module('myapp',[]);
      app.controller('myctrl', function($scope){
      		//just initialize values here , instead of using placeholder in <input>	
          $scope.firstName = "PriyanshPradip";
          $scope.lastName = "Shah";
      });
	</script>
	
	<!-- ng-repeat : USE THIS DIV TAG ALTERNATELY TO SEE RESULT -->
	<div ng-app="" ng-init="cars = [{car:'Honda',type:'CRV'}]">
         <p>Demo of ng-repeat tag </p>
         <ul>
         	<li ng-repeat="x in cars">
            	{{ x.car + ', ' + x.type }}
                </li>
         </ul>
    </div>
    
    <!--USE THIS DIV TAG ALTERNATELY TO SEE RESULT -->
    <div ng-app="" ng-init="FirstName='Priyansh'">
    	<p> Please enter text in placeholder </p>
        <p> <input type="textbox" ng-model="myname" placeholder="Enter text here" />
    	<h2> Hello my name is :{{myname}} </h2>
        <h1>What a beautiful Day  <span ng-bind="FirstName"> </span> </h1>
    </div>
    
    <!--USE THIS DIV TAG ALTERNATELY TO SEE RESULT-->
    <div ng-app="" ng-init="person={firstName:'Priyansh',lastName:'shah'}">
    	<p>The name is <span ng-bind="person.firstName"></span></p>
    </div>
    
